    parameters:
      overrides:
        description: Configuration parameters to override.
        type: str
        default: ''
    command: >-
      python source_data.py $(echo {overrides})
  train:
    description: Train the model
    parameters:
      overrides:
        description: Configuration parameters to override.
        type: str
        default: ''
    command: >-
      python train.py $(echo {overrides})
